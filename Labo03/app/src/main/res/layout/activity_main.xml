<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cant_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_title"
        android:text="@string/title_txt"
        android:textSize="@dimen/title_txt"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_txt"
        android:text="0"
        android:textSize="@dimen/txt_count"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cant_txt" />

    <TextView
        android:id="@+id/five_ctn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_side_txt"
        android:layout_marginTop="@dimen/margin_txt"
        android:text="@string/_0_05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_ctn_img" />

    <TextView
        android:id="@+id/ten_ctn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_txt"
        android:layout_marginEnd="@dimen/margin_side_txt"
        android:text="@string/_0_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ten_ctn_img" />

    <TextView
        android:id="@+id/quater_ctn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="@dimen/margin_txt"
        android:text="@string/_0_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quater_ctn_img" />

    <TextView
        android:id="@+id/one_dollar_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_txt"
        android:layout_marginEnd="84dp"
        android:text="@string/_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one_dollar_img" />

    <ImageView
        android:id="@+id/five_ctn_img"
        android:layout_width="@dimen/width_img"
        android:layout_height="@dimen/height_img"
        android:layout_marginStart="@dimen/margin_side_img"
        android:layout_marginTop="@dimen/margin_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_txt"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/ten_ctn_img"
        android:layout_width="@dimen/width_img"
        android:layout_height="@dimen/height_img"
        android:layout_marginTop="@dimen/margin_txt"
        android:layout_marginEnd="@dimen/margin_side_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_txt"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/quater_ctn_img"
        android:layout_width="@dimen/width_img"
        android:layout_height="@dimen/height_img"
        android:layout_marginStart="@dimen/margin_side_img"
        android:layout_marginTop="@dimen/margin_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_ctn_txt"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/one_dollar_img"
        android:layout_width="@dimen/width_img"
        android:layout_height="@dimen/height_img"
        android:layout_marginTop="@dimen/margin_txt"
        android:layout_marginEnd="@dimen/margin_side_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ten_ctn_txt"
        app:srcCompat="@drawable/one_dollar" />

</androidx.constraintlayout.widget.ConstraintLayout>